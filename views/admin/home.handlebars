<div class="bg-light p-2 rounded-lg m-3 bodyhome" >
{{#if produto.length}}
  {{#each produto}} 
    <section id="item">
        <div class="">
            <div class="codigo tit">
              <b>código:</b> {{codigo}}</div>
            <div class="produto tit"><b>Produto:</b> {{produto}}</div>
            <div class="modelo"><b>Modelo:</b>
              <select name="modelos" id="modelos">
                  {{modelo}}
              </select>
            </div>
            <div class="marca"><b>Marca:</b>{{marca}} </div><br>
            <div class="quantidade tit">
              <b class="quantidade">Quantidade disponivel:</b>{{quantidade}}</div>
            <div class="valor tit"><b>Valor:</b>{{valorv}}</div>
        </div>
    </section>  
  {{/each}} 
{{else}}
    {{#if Search}}
      <p>nenhum produto encontrado com o nome"{{Search}}"</p>
    {{else}}
    <div id="">
      faça a pesquisa
    </div>
    {{/if}}
{{/if}}
</div>

<style>
.bodyhome , .titulo{
  width: 100%;
}
section{
  margin: 2px;
  background-color: rgb(255, 255, 255); 
  border: 1px solid;
  display: flex;
  border-radius: 5px ;
  padding-left: 5px;
  box-shadow: -3px 3px 2px 0px rgba(0,0,0,0.50);  
}
.codigo{
    font-size: 14px;
    width: 130px;
}
.produto{
  width: 400px;
  font-size: 20px;
}
.marca{
  display: inline-block;
}
.modelo{
  width: 220px;
  display: inline-block;
}
select{
  opacity: 0.2;
  width: 150px;
}
.quantidade{
  font-size: 14px;
  display: inline-block;
  width: 200px; 
}
.valor{
  font-size: 18px;
  display: inline-block;
}
#semPesquisa{
  text-align: center;
}
</style>

